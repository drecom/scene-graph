{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "id": "/definitions/ScrollBar.json",

  "definitions": {
    "ScrollBar": {
      "id": "#ScrollBar",
      "type": "object",
      "properties": {
        "handle":{"$ref": "ComponentReference.json#/definitions/ComponentReference"},
        "scrollView":{"$ref": "ComponentReference.json#/definitions/ComponentReference"},
        "enableAutoHide":{"type":"boolean"},
        "autoHideTime":{
          "type":"number",
          "minimum": 0.0
        },
        "direction":{
          "type":"string",
          "pattern":"(Vertical|Horizontal)"
        }
      }
    }
  }
}
