{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "id": "/definitions/Text.json",

  "definitions": {
    "Text": {
      "id": "#Text",
      "type": "object",
      "properties": {
        "text":  { "type": "string" },
        "style": {
          "type": "object",
          "properties": {
            "size": {
              "type": "number",
              "default": 12
            },
            "horizontalAlign": {
              "type": "number",
              "default": 0
            },
            "color": {
              "type": "string",
              "default": "#000000"
            }
          }
        }
      },
      "required": [
        "text",
        "style"
      ]
    }
  }
}
